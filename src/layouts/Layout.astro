---
interface Props {
	title: string;
}

const { title } = Astro.props;
import SideBar from "../components/home/SideBar.astro";
import LeftNavbar from "../components/LeftNavbar.astro";
import TopNavbar from "../components/TopNavbar.astro";
import "../styles/base.css"

---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="AIRIS | AI Research Islamic Knowledges" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		
		<title>{title}</title>
	</head>
	<body class="relative max-h-screen w-full">
  <TopNavbar />

  <!-- Main container with margin-top to avoid overlap with header -->
  <div class="flex flex-col min-h-screen max-w-screen-2xl px-4 mx-auto">
    <div class="flex flex-1 gap-2 sm:gap-4">
      
      <!-- Sidebar -->
      <aside class="hidden  sm:block sm:w-2/12 overflow-y-auto max-h-screen pt-[100px] no-scrollbar">
        <!-- <div class="h-[1800px]">Sidebar Content</div> -->
		 <LeftNavbar />
      </aside>

      <!-- Main Content Area -->
      <main class="flex-1  overflow-y-auto max-h-screen pt-[100px] no-scrollbar">
		<slot />
	</main>

    </div>
  </div>

	</body>
</html>
