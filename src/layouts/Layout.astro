---
interface Props {
	title: string;
}

const { title } = Astro.props;
import SideBar from "../components/home/SideBar.astro";
import LeftNavbar from "../components/LeftNavbar.astro";
import TopNavbar from "../components/TopNavbar.astro";
import "../styles/base.css"

---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="AIRIS | AI Research Islamic Knowledges" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		
		<title>{title}</title>
	</head>
	<body>
		<TopNavbar />
		
		<main class="max-w-screen-2xl mx-auto px-4">
			<div class="flex flex-col lg:flex-row items-start justify-start gap-8">
				<div class="w-full lg:max-w-72">
					<LeftNavbar />
				</div>
				<div class="w-full">
					<slot />
				</div>
				<div class=" w-full sm:max-w-60 sm:mt-12">
					<SideBar />
				</div>
			</div>
		</main>
	</body>
</html>
